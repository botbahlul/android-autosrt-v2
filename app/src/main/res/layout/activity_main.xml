<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textview_text1"
            android:text="@string/textview_voice_language_hints"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            />

        <Spinner
            android:id="@+id/spinner_src_languages"
            android:hint="@string/voice_language_hints"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="12sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/textview_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_text2"
            android:text="@string/textview_translation_language_hints"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_src_languages"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            />

        <Spinner
            android:id="@+id/spinner_dst_languages"
            android:hint="@string/voice_language_hints"
            android:spinnerMode="dropdown"
            android:minHeight="48dp"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="12sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/textview_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_fileuri"
            android:hint="@string/fileURI"
            android:padding="5dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_dst_languages"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textview_filepath"
            android:hint="@string/filepath"
            android:padding="5dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_fileuri"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/button_browse"
            android:text="@string/browse"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_filepath"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/button_start"
            android:text="@string/start"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_browse"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_output"
            android:hint="@string/output_messages"
            android:padding="10dp"
            android:gravity="left"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/button_start"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            tools:ignore="RtlHardcoded,SmallSp" />

    </RelativeLayout>
</ScrollView>
