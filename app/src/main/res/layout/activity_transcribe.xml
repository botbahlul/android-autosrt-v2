<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/textview_src"
            android:hint="@string/language_src_language"
            android:padding="5dp"
            android:gravity="start|center"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textview_dst"
            android:hint="@string/language_dst_language"
            android:padding="5dp"
            android:gravity="start|center"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/textview_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textview_filepath"
            android:hint="@string/file_path"
            android:padding="5dp"
            android:gravity="start|center"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/textview_dst"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/button_cancel"
            android:text="@string/cancel"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_filepath"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textview_current_file"
            android:hint="@string/current_file_proceed"
            android:padding="5dp"
            android:gravity="start|center"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:typeface="sans"
            android:layout_below="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textview_progress"
            android:hint="Current progress"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            android:typeface="sans"
            android:layout_below="@+id/textview_current_file"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textview_current_file"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textview_progress"
            android:max="100"
            android:scaleY="3"
            android:visibility="visible" />
        <TextView
            android:id="@+id/textview_percentage"
            android:hint="100%"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            android:typeface="sans"
            android:layout_below="@+id/textview_current_file"
            android:layout_toEndOf="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <TextView
            android:id="@+id/textview_time"
            android:hint="ETA  : 00:00:00"
            android:focusable="true"
            android:gravity="right"
            android:longClickable="true"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:typeface="sans"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_toEndOf="@+id/textview_percentage"
            android:layout_below="@+id/textview_current_file"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            tools:ignore="RtlHardcoded,SmallSp"
            />
        <TextView
            android:id="@+id/textview_output_messages_2"
            android:hint="@string/output_messages"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="RtlHardcoded,SmallSp" />
    </RelativeLayout>
</ScrollView>
