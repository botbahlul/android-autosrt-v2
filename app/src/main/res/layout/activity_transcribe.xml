<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textview_src"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_dst"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/textview_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_filepath"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/textview_dst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_debug"
            android:hint="@string/output_messages"
            android:padding="5dp"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textSize="13sp"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            android:background="@android:drawable/editbox_background"
            android:typeface="sans"
            android:layout_below="@+id/textview_filepath"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="RtlHardcoded,SmallSp" />

        <Button
            android:id="@+id/button_cancel"
            android:text="@string/cancel"
            android:padding="0dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_debug"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>
</ScrollView>
